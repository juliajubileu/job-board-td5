<h2>Cadastro de recrutador</h2>

<%= form_for(@recruiter, url: registration_path(resource_name)) do |f| %>
  <%= render "recruiters/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'E-mail' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha' %>
    <% if @minimum_password_length %>
    <em>(mÃ­nimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirme a senha' %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
<% end %>  

<%= render "recruiters/shared/links" %>
<%= link_to 'Voltar', root_path %>

